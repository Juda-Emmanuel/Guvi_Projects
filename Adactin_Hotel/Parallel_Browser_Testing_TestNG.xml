<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Adactin Suite" parallel="tests" thread-count="4">

	<test name="Chrome Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.testcases.LoginTest" />
			<class name="com.testcases.SearchHotelTest" />
			<class name="com.testcases.SelectHotelTest" />
			<class name="com.testcases.BookingHotelTest" />
		</classes>
	</test>

	<test name="Firefox Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.testcases.LoginTest" />
			<class name="com.testcases.SearchHotelTest" />
			<class name="com.testcases.SelectHotelTest" />
			<class name="com.testcases.BookingHotelTest" />
		</classes>
	</test>

	<test name="Edge Test">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.testcases.LoginTest" />
			<class name="com.testcases.SearchHotelTest" />
			<class name="com.testcases.SelectHotelTest" />
			<class name="com.testcases.BookingHotelTest" />
		</classes>
	</test>
</suite>
